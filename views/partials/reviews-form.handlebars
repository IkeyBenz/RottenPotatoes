<fieldset>
    <legend>{{#if review}}Edit Review{{else}}Create Review{{/if}}</legend>
    <div class="form-group">
        <label>Title</label><br>
        <input class="form-control" type="text" name="title" value="{{review.title}}"/>
    </div>
    <div class="form-group">
        <label for="movie-title">Movie Title</label><br>
        <input class="form-control" type="text" name="movieTitle" value="{{review.movieTitle}}" />
    </div>
    <div class="form-group">
        <label for="review-description">Description</label><br>
        <textarea class="form-control" name="description" rows="10" />{{review.description}}</textarea>
    </div>
    {{#if review}}
        <input type="hidden" name="movieId" value="{{review.movieId}}">
    {{else}}
        <input type="hidden" name="movieId" value="{{movieId}}">
    {{/if}}
    
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Review</button>
    </div>
    <form class="form-group" method="GET" action="/">
        <button class="btn btn-danger" type="submit">Cancel</button>
    </form>
</fieldset>